//espiral 
void imprimirEspiral(int matriz[][10], int N, int M){
    int arriba=0,  abajo= N-1; 
    int izquierda = 0,  derecha= M-1;
    
   // Recorre de izquierda a derecha
        for (int i = izquierda; i <= derecha; i++)
            printf("%d ", matriz[arriba][i]);
        arriba++;

        // Recorre de arriba a abajo
        for (int i = arriba; i <= abajo; i++)
            printf("%d ", matriz[i][derecha]);
        derecha--;

        // Recorre de derecha a izquierda
        if (arriba <= abajo) {
            for (int i = derecha; i >= izquierda; i--)
                printf("%d ", matriz[abajo][i]);
                abajo--;
        }

        // Recorre de abajo a arriba
        if (izquierda <= derecha) {
            for (int i = abajo; i >= arriba; i--)
                printf("%d ", matriz[i][izquierda]);
            izquierda++;
        }
    }




